<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./style.css" />
    <title><%=title%></title>
  </head>
  <body>
    <div class="menu">
        <div id="file">File</div>
        <div id="home">Home</div>
    </div>
    <div class="menu-options">
        <div class="file-menu-options">
            <div id="New">New</div>
            <div id="Open">Open</div>
            <div id="Save">Save</div>
        </div>
    </div>
    <div class="menu-options">Menu Options</div>
    <div class="formula-bar"><input id="address-input" type="text" /><input type="text" id="formula-input"/></div>
    <div class="cell-container" id="grid-container">
        <div id="top-left-cell" class="top-left-cell"></div>
        <div class="top-row" id="top-row">
            <%for(let i=0;i<cols;i++){%>
                <div class="cell">
                    <%=String.fromCharCode(i+65)%>
                </div>
            <%}%>
        </div>
        <div class="left-col" id="left-col">
            <%for(let i=1;i<rows;i++){%>
                <div class="cell">
                    <%=i%>
                </div>
            <%}%>
        </div>
        <div class="grid" id="grid">
            <%for(let i = 0; i<rows;i++){%>
                <div class="row">
                    <%for(let j = 0; j<cols;j++){%>
                    <div contenteditable="true" class="cell" ri=<%=i%> ci=<%=j%>>
                    </div> 
                    <%}%>
                </div>
            <%}%>    
        </div>
    </div>
    <div class="sheets">Sheets</div>
    <script src="./script.js"></script>
  </body>
</html>
